<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#171c20" />

            <solid android:color="#050e13" />
        </shape></item>
    <item android:state_pressed="true"><layer-list>
            <item><shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="50dip" android:topLeftRadius="50dip" />

                    <stroke android:width="1dip" android:color="#171c20" />

                    <gradient android:angle="-90" android:endColor="#626b70" android:startColor="#080909" />
                </shape></item>
            <item><bitmap android:src="@drawable/icon_silentmode" />
            </item>
        </layer-list></item>
    <item><layer-list>
            <item><shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="50dip" android:topLeftRadius="50dip" />

                    <stroke android:width="1dip" android:color="#171c20" />

                    <gradient android:angle="-90" android:endColor="#050e13" android:startColor="#3c454a" />
                </shape></item>
            <item><bitmap android:src="@drawable/icon_silentmode" />
            </item>
        </layer-list></item>

</selector>