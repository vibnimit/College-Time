<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2f4552" >

    <ScrollView
        android:id="@+id/ScrollView02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#2f4552"
        android:gravity="center"
        android:scrollbars="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2f4552"
            android:gravity="center" >

            <Button
                android:id="@+id/button_view"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_bg"
                android:text="View Time Table"
                android:textColor="#cbcbcb"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_manage"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_bg"
                android:text="Manage Time Table"
                android:textColor="#cbcbcb"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/toggle"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_toggle_bg"
                android:onClick="onToggleClicked"
                android:textColor="#cbcbcb"
                android:textOff="Auto Silent Off"
                android:textOn="Auto Silent On"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:layout_margin="-2dp"
                android:background="@drawable/bg_heading"
                android:orientation="vertical">

                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="-6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_marginRight="-6dp"
                    android:layout_marginTop="12dp"
                    
                    android:gravity="center_horizontal"
                    android:padding="6dp"
                    android:text="Quick Ringer Mode (Auto Silent will Turn Off)"
                    android:textColor="#eeeeee"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:weightSum="4" >

                    <Button
                        android:id="@+id/silent_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/button_silent" />

                    <Button
                        android:id="@+id/ring_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/button_ring" />
                </LinearLayout>
            </LinearLayout>
        </TableLayout>
    </ScrollView>

</RelativeLayout>