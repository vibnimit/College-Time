<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2f4552"
    android:padding="10dp"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:padding="3dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textStyle="bold"
                android:text="Total Periods"
                android:textColor="#cbcbcb" />

            <Spinner
                android:id="@+id/period_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:entries="@array/period_no"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:padding="3dp"
            android:paddingBottom="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textStyle="bold"
                android:text="College Start Time"
                android:textColor="#cbcbcb" />

            <Button
                android:id="@+id/start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@drawable/button_blackberry"
                android:text="8:00"
                android:textColor="#cbcbcb" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:padding="3dp"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textStyle="bold"
                android:text="Period Duration (Minutes)"
                android:textColor="#cbcbcb" />

            <Spinner
                android:id="@+id/period_duration"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="5"
                android:entries="@array/period_duration" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:padding="3dp"
            >

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recess Allowed"
                android:textStyle="bold"
                android:textColor="#cbcbcb" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            
            android:padding="3dp"
			>

            <TextView
                android:id="@+id/lunch_dura_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Recess Duration (Minutes)"
                android:textStyle="bold"
                android:textColor="#cbcbcb"
                android:visibility="invisible" />

            <Spinner
                android:id="@+id/lunch_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:entries="@array/lunch_duration"
                android:textColor="#fff"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            
            android:padding="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lunch_after_period_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Recess Time (After Period)"
                android:textColor="#cbcbcb"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Spinner
                android:id="@+id/lunch_aftr_prd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:entries="@array/lunch_after_period"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            
            android:padding="3dp"
            android:layout_weight="2" >

            <TextView android:text="Time Table Layout"
                
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textStyle="bold"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/screen_orientation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >


                    <RadioButton
                        android:id="@+id/landscape"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Landscape"
                        android:textColor="#cbcbcb" />

                    <RadioButton
                        android:id="@+id/portrait"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Portrait"
                        android:textColor="#cbcbcb" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            
            android:padding="3dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@drawable/button_white"
                android:text="Cancel"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:textColor="#222" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="2dp"
                android:background="@drawable/toggle_on"
                android:text="Save"
                android:textStyle="bold"
                android:textColor="#cbcbcb" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>